@*Use ViewModel here*@

@model TechJobsPersistent.ViewModels.AddJobViewModel

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post" class="row shadow p-3 mb-5 mt-2 bg-body rounded">
    <div class="col-md-6">
        <h5><label asp-for="Name"></label></h5>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="col-md-6">
        <h5><label asp-for="EmployerId">Employer</label></h5>
        <select class="form-control" asp-for="EmployerId" asp-items="Model.Employers">Employers</select>
        <span asp-validation-for="EmployerId"></span>
    </div>

    <div class="col-12 mt-2">
        <div>
            <h5>Skills</h5>
            @foreach (var skill in @Model.Skills)
            {
                <input type="checkbox" name="selectedSkills" value="@skill.Id" />
                <label asp-for="Skills">@skill.Name</label>
                <br />
            }
        </div>
    </div>
    
    <div class="col-12 mt-2">
        <input type="submit" value="Add Job" class="btn btn-primary" />
    </div>
    
</form>

<div>
    <a asp-controller="Employer" asp-action="Add">Add an employer</a>
</div>
<div>
    <a asp-controller="Skill" asp-action="Add">Add skill</a>
</div>

